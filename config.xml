<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.videoplus.success"
	version 	= "1.1.19">

	<name>Success On Demand</name>

	<description>
		Subscription-based mobile access to Success Magazine articles, as well as audio and video content.
	</description>

  <author href="http://www.lightsandcolors.com"
		email="dan@lightsandcolors.com">
		Daniel Hilton
	</author>

  <icon src="icon.png"/>
  <icon src="resources/icons/Icon.png" gap:platform="ios" width="57" height="57" />
  <icon src="resources/icons/Icon~ipad.png" gap:platform="ios" width="72" height="72" />
  <icon src="resources/icons/Icon@2x.png" gap:platform="ios" width="114" height="114" />

  <icon src="resources/icons/Icon-76.png" gap:platform="ios" width="76" height="76" />
  <icon src="resources/icons/Icon-60@2x.png" gap:platform="ios" width="120" height="120" />
  <icon src="resources/icons/Icon-76@2x.png" gap:platform="ios" width="152" height="152" />

  <gap:splash src="splash.png"/>
  <gap:splash src="resources/loading/Default.png" gap:platform="ios" width="320" height="480" />
  <gap:splash src="resources/loading/Default@2x.png" gap:platform="ios" width="640" height="960" />
  <gap:splash src="resources/loading/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />
  <gap:splash src="resources/loading/Default-Landscape-ipad.png" gap:platform="ios" width="1024" height="748" />
  <gap:splash src="resources/loading/Default-ipad.png" gap:platform="ios" width="768" height="1004" />

  <preference name="orientation" value="portrait" />
  <preference name="phonegap-version" value="3.3.0"/>

  <feature name="http://api.phonegap.com/1.0/network"/>

  <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />

  <gap:config-file platform="ios" parent="UIStatusBarHidden">
    <true/>
  </gap:config-file>

  <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
    <false/>
  </gap:config-file>

  <gap:url-scheme name="com.success.ondemand">
    <scheme>sod</scheme>
  </gap:url-scheme>

  <access origin="*" browserOnly="true"/>

</widget>
